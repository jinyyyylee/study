<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstellationActivity">


    <DatePicker
        android:id="@+id/datepicker"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner" />

    <ImageView
        android:id="@+id/constellation"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_above="@+id/constellationbt"
        android:layout_below="@+id/datepicker"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="30sp"
        android:src="@drawable/constellationimg" />

    <TextView
        android:id="@+id/constext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datepicker"
        android:layout_alignBottom="@+id/datepicker"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="91dp"
        android:layout_marginBottom="-118dp"
        android:layout_toRightOf="@+id/constellation"
        android:text="나의 로또 번호는?"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/constellationbt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="#BC8F8F"
        android:text="로또 번호 확인" />

</RelativeLayout>