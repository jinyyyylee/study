<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ScrollingActivity_Table">

    <TextView
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="전입신고서(세대 모두 이동)"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/explain"
        android:layout_width="411dp"
        android:layout_height="40dp"
        android:text="※ 이 신고서는 세대가 모두 이동하며, 세대주 변경이 없는 경우에만 작성합니다."
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/bar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="28dp" />

    <Button
        android:id="@+id/Num"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:text="접수번호"
        android:textSize="10dp"
        android:background="#8C8C8C"
        app:layout_constraintTop_toBottomOf="@+id/explain"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Numinput"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:text=""
        android:background="#8C8C8C"
        app:layout_constraintLeft_toRightOf="@+id/Num"
        app:layout_constraintTop_toBottomOf="@+id/explain"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/date"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:text="신고일"
        android:textSize="10dp"
        android:background="#8C8C8C"
        app:layout_constraintLeft_toRightOf="@+id/Numinput"
        app:layout_constraintTop_toBottomOf="@+id/explain"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/dateinput"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:background="#8C8C8C"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/date"
        app:layout_constraintTop_toBottomOf="@+id/explain"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/Name"
        android:layout_width="67dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:padding="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="전입자\n(신고인)"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Num"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Name1"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:padding="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textStyle="italic"
        android:text=""
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@+id/Name"
        app:layout_constraintTop_toBottomOf="@+id/Numinput"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/id"
        android:layout_width="80dp"
        android:layout_height="39dp"
        android:text="주민등록번호"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@+id/Name1"
        app:layout_constraintTop_toBottomOf="@id/date"/>

    <EditText
        android:id="@+id/id_"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:padding="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textStyle="italic"
        android:text=""
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@+id/id"
        app:layout_constraintTop_toBottomOf="@+id/Numinput"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/phone"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="연락처"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintLeft_toRightOf="@id/id_"/>


    <EditText
        android:id="@+id/phone_"
        android:layout_width="92dp"
        android:layout_height="39dp"
        android:gravity="center"
        android:padding="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text=""
        android:textSize="10dp"
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@+id/phone"
        app:layout_constraintTop_toBottomOf="@+id/dateinput"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/location"
        android:layout_width="67dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:padding="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="전에\n 살던 곳"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Name"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/location_"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:padding="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textStyle="italic"
        android:text="(시ㆍ도)              (시ㆍ군ㆍ구)        "
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@+id/location"
        app:layout_constraintTop_toBottomOf="@+id/Name1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/explain_"
        android:layout_width="154dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:padding="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="※ 시ㆍ도, 시ㆍ군ㆍ구까지만 작성\n(상세 주소는 작성하지 않아도 됩니다.)"
        android:textSize="9dp"
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@+id/location_"
        app:layout_constraintStart_toEndOf="@+id/location_"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/nowaddress"
        android:layout_width="67dp"
        android:layout_height="90dp"
        android:text="현재\n사는 곳\n(이사한 곳)"
        app:layout_constraintTop_toBottomOf="@+id/location"
        android:textSize="10dp"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/Name2"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:textSize="8dp"
        android:textStyle="italic"
        android:text="세대주 성명(※ 세대주가 신고할 때에는 작성하지 않습니다.)"
        app:layout_constraintTop_toBottomOf="@+id/location_"
        app:layout_constraintLeft_toRightOf="@+id/nowaddress"/>

    <EditText
        android:id="@+id/masterphone"
        android:layout_width="133dp"
        android:layout_height="30dp"
        android:gravity="left"
        android:padding="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="연락처"
        android:textSize="10dp"
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@+id/Name2"
        app:layout_constraintTop_toBottomOf="@+id/explain_"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/nowaddress_"
        android:layout_width="343dp"
        android:layout_height="30dp"
        android:gravity="left"
        android:padding="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="주소"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@+id/nowaddress"
        app:layout_constraintTop_toBottomOf="@+id/Name2"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/Detailedaddress"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:gravity="left"
        android:padding="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textStyle="italic"
        android:text="다가구주택 명칭"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@+id/nowaddress"
        app:layout_constraintTop_toBottomOf="@+id/nowaddress_"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/adressexplain"
        android:layout_width="154dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:padding="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="※ 구분 등기가 되어 있지 않은 다가구주택인 경우 작성  (예: 무궁화빌라, 1동 1층 2호)"
        android:textSize="8dp"
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@+id/Detailedaddress"
        app:layout_constraintTop_toBottomOf="@+id/nowaddress_"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/reason"
        android:layout_width="67dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:padding="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="전입 사유\n(※주된 1가지)"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@+id/nowaddress"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/reason1"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:gravity="left"
        android:text=" [  ] 직업 (취업, 사업, 직장 이전 등)\n [  ] 가족 (가족과 함께 거주, 결혼, 분가 등)\n [  ] 주택 (주택 구입, 계약 만료, 집세, 재개발 등)\n [  ]그 밖의 사유 (                            )"
        android:textSize="7dp"
        app:layout_constraintLeft_toRightOf="@+id/reason"
        app:layout_constraintTop_toBottomOf="@+id/Detailedaddress"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/reason2"
        android:layout_width="164dp"
        android:layout_height="60dp"
        android:gravity="left"
        android:text=" [  ] 교육 (진학, 학업, 자녀 교육 등)\n [  ] 주거 환경 (교통, 문화ㆍ편의 시설 등)\n [  ] 자연 환경 (건강, 공해, 전원생활 등)"
        android:textSize="7dp"
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@+id/reason1"
        app:layout_constraintTop_toBottomOf="@+id/adressexplain"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="bottom"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/reason"
        android:text="    읍ㆍ면ㆍ동장 및 출장소장 귀하"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/Note"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="#8C8C8C"
        android:text="유의사항"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@+id/text"
        tools:layout_editor_absoluteX="-1dp" />

    <TextView
        android:id="@+id/Note1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. 전입신고는 신거주지에 전입한 날부터 14일 이내에 현 거주지에서 해야 하며, 전입신고 내용의 사실 여부는 통장ㆍ이장이 사후에 확인하며, 거짓으로 신고한 것이 확인되면 처벌을 받습니다.  - 정당한 사유 없이 14일 이내에 신고를 하지 않으면 5만 원 이하의 과태료를 물게 되며, 거짓으로 신고한 경우에는 3년이하의 징역형 또는 3천만원 이하의 벌금형을 받게 됩니다.(「주민등록법」 제37조 및 제40조)\n2. 거짓 전입 및 무단 전출을 하면 신고한 최종 주소지에 ‘거주불명 등록’될 수 있고, ‘거주불명 등록’ 후 1년 내에 실제 거주지에\n 재등록하지 않으면 최종 주소지 관할 읍ㆍ면사무소 또는 동 주민센터의 주소를 행정상 관리주소로 하여 거주불명 등록을할 수 있습니다.\n3. 전입 사유 칸은 「통계법」에 따라 인구 이동 통계 작성을 위한 자료로 활용됩니다. 같은 법 제32조에 따라 성실하게 응답해야\n할 의무가 있으며, 같은 법 제33조에 따라 비밀이 보호되고, 전입 사유 칸의 내용은 통계 작성의 목적으로만 사용됩니다."
        android:textSize="7dp"
        app:layout_constraintTop_toBottomOf="@+id/Note" />
    <TextView
        android:textSize="13dp"
        android:id="@+id/way"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#8C8C8C"
        app:layout_constraintTop_toBottomOf="@+id/Note1"
        android:text="작성방법"
        android:gravity="center"/>
    <TextView
        android:id="@+id/way_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. ‘연락처’는 도로명주소 등 신고인에게 필요한 사항을 알리고 도우려는 목적으로만 이용되니 연락처가 바뀔 때에는 관할 읍ㆍ면사무소 또는 동 주민센터에 알려 주시기 바라며, 희망하는 사람만 연락처를 쓰기 바랍니다.\n2. 전입 주소가 다가구주택인 경우에 ‘주택 명칭ㆍ층ㆍ호수’는 주민등록 관리 등을 위해 필요한 사항으로 원하는 사람만 작성하면 되고, 공법상 주소로는 인정되지 않으며, 공무상 필요한 경우 국가나 지방자치단체에 제공될 수 있으며, 이를 작성하지 않아 우편물 등이 송달되지 않는 책임은 본인에게 있습니다.\n※ 다만, 「도로명주소법」에 의한 상세 주소(동ㆍ층ㆍ호)가 부여된 경우 공법상 주소로 전입신고 가능합니다."
        android:textSize="7dp"
        app:layout_constraintTop_toBottomOf="@id/way"/>
    <TextView
        android:textSize="13dp"
        android:id="@+id/way_exp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#8C8C8C"
        app:layout_constraintTop_toBottomOf="@+id/way_"
        android:text="※ 우편물 전입지 전송 서비스를 신청하는 사람만 작성합니다."
        android:gravity="center"/>
    <TextView
        android:id="@+id/seviceexp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="7dp"
        app:layout_constraintTop_toBottomOf="@id/way_exp"
        android:text="이 서비스는 전에 살던 주소지로 배달되던 우편물을 전입신고한 주소로 배달하는 서비스로서 세대주 및 세대원의 개인 정보가 우체국으로 제공되므로 신청인의 동의가 필요합니다.(전입지 전송 서비스 신청 후 새로운 곳으로 다시 전입신고한 경우 기존에 신청한 건은 자동으로 삭제되며, 직전 주소지에서 새로 전입신고한 주소지로만 서비스가 제공됩니다)
\n■ 제공 항목: 동의하는 세대주 및 세대원의 성명, 주소, 전화번호(휴대전화 번호)"/>
    <TextView
        android:id="@+id/Name3"
        android:layout_width="245dp"
        android:layout_height="30dp"
        android:text="○ 우편물 전송을 받으려 하는 세대주 및 세대원 성명 작성: "
        android:textSize="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/seviceexp"
        tools:ignore="MissingConstraints"/>
    <EditText
        android:id="@+id/Name6"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:textSize="9dp"
        app:layout_constraintLeft_toRightOf="@+id/Name3"
        app:layout_constraintTop_toBottomOf="@id/seviceexp" />
    <TextView
        android:id="@+id/phone1"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="○ 신청인 전화번호: "
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/Name3"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/phone1_"
        android:layout_width="310dp"
        android:layout_height="30dp"
        android:text=" ☏       -       -       "
        android:textSize="8dp"
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@+id/phone1"
        app:layout_constraintTop_toBottomOf="@id/Name3" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:text="위의 사항을 확인하였고 정보 제공에 동의합니다. "
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@+id/phone1"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/human"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="신청인"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/phone1_"
        app:layout_constraintLeft_toRightOf="@+id/checkBox"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Name4"
        android:layout_width="101dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text=""
        android:textSize="9dp"
        app:layout_constraintLeft_toRightOf="@id/human"
        app:layout_constraintTop_toBottomOf="@id/phone1_"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/Name5"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="bottom"
        android:text="(서명 또는 인)"
        android:textSize="7dp"
        app:layout_constraintTop_toBottomOf="@id/phone1_"
        app:layout_constraintLeft_toRightOf="@id/Name4"
        tools:ignore="MissingConstraints" />





</androidx.constraintlayout.widget.ConstraintLayout>
